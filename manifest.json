{
  "manifest_version": 3,
  "name": "NotifyBuddy",
  "description": "A lightweight reminder system for quick follow-ups",
  "version": "1.0.0",
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  }
}

